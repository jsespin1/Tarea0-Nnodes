<div id="modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <%= form_for @player, url: create_player_path, html: { method: :post }, remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, class: "control-label col-sm-2", style: "font-size: 20px;" %>
            <%= f.text_field :name, class: "form-control input-lg" %>
          </div>
          
          <div class="form-group">
            <%= f.label :money, 'Initial Balance: $10.000', style: "font-size: 20px; width:80%;" %>
          </div>
        </div>


        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>