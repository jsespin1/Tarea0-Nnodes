<table class="table players">
    <thead>
      <tr>
        <th>Name</th>
        <th>Money</th>
        <th>Active</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
    	<% @players.each do |a| %>
	      <tr class="success">
	        <td >	<%= best_in_place a, :name, :as => :input %>	</td>
	        <td>	<%= best_in_place a, :money, :as => :input %>	</td>
	        <td class="check">	<%= best_in_place a, :active, as: :checkbox, collection: {false: "Nope", true: "Yep"} %>	</td>
	        <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
    </tbody>
</table>

<p>Last Round: <%= @ruleta.last_round.strftime("%Y-%m-%d %H:%M:%S") %></p>
<p>Next Round: <%= (@ruleta.last_round+3.minutes).strftime("%Y-%m-%d %H:%M:%S") %></p>

<%= link_to 'Home', home_path, :html => { :class => "btn" } %>
